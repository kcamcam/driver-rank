<!-- Row -->
<div class="row">
  <!-- ./ column -->
  <div class="col s12 m8 offset-m2">
    <h3 class="hide-on-small-only">JK 😂</h3>
    <p class="mb-0">
      <span class="hide-on-med-and-up">JK 😂</span> Not on the <strong>Appstore</strong> or <strong>Google Play Store</strong>. But if you think it should be (or not), give it a thumbs up/down.
    </p>

    <!-- Votes -->
    <div class="row mb-0 mt-2 mt-xs-0">
      <div class="col s2 valign-wrapper">
        <h5 id="votes" class="green-text"><%= User.first.get_upvotes.size%></h5>
      </div>
      <div class="col s4">
        <a class="btn-floating btn-large waves-effect waves-light green" data-method="put" href="appstore/1/upvote">👍</a>
      </div>
      <div class="col s4">
        <a class="btn-floating btn-large waves-effect waves-light red" data-method="put" href="appstore/1/downvote">👎</a>
      </div>
      <div class="col s2 valign-wrapper">
        <h5 id="votes" class="red-text"><%= @kevin.get_downvotes.size%></h5>
      </div>
    </div>
    <!-- ./ Votes -->
  </div>
  <!-- ./ column -->
  <div class="col s12 m8 offset-m2">
    <h4 class="hide-on-small-only"> In the meantime</h4>
    <p class="mb-xs-2"><span class="hide-on-med-and-up">In the meantime </span>add a shortcut to your homescreen. <a href="https://youtu.be/oKMQ0F-JflU">Instructions</a></p>
    <%= image_tag "ios.png", :alt => "app icon img", width: "100%;"  %>
    <p class="mt-xs-1 mb-xs-2"><strong class="red-text">Tip:</strong> Add the shortcut while on the New Rank page for quicker access.</p>
  </div>

  <!-- Nav Links -->
  <div class="col s12 center-align">
    <%= link_to raw("🏡&nbsp;Home"), welcome_index_path, class: "waves-effect waves-light btn-large blue", :method => :get %>
    <span>&nbsp;&nbsp;</span>
    <%= link_to (raw("🏁&nbsp;Ranks")), licenceplates_path, class: "waves-effect waves-light btn-large orange", :method => :get %>
  </div>
  <!-- ./ Nav Links -->
</div>
<!-- ./ Row -->
