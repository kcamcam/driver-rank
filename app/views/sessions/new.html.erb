<% content_for :title, "🚗 Log in" %>
<div class="row section">
  <div class="col m8 offset-m2">
    <h1>Log in</h1>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.fields_for :spec do |s| %>
        <%= s.check_box :remember_me, style: "border-color: blue;" %>
        <%= s.label :remember_me %>
      <% end %>
      <br /><br />

      <%= button_tag(type: 'submit', class: "btn waves-effect waves-light green") do %>
        🔐 Login
      <% end %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", users_new_path %></p>
  </div>
</div>
