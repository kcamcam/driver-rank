<% content_for :title, "All Rankings" %>

  <h2 class="center-align hide-on-small-only"><a href="https://instantcena.ca">All Rankings</a></h2>

  <!-- Row -->
  <div class="row center-align mb-0">
    <!-- Table -->
    <table class="striped centered">
      <!-- Table Headers -->
      <thead>
        <tr>
          <th><h4>🚘</h4></th>
          <th><h4>🇨🇦</h4></th>
          <th><h4>👍</h4></th>
          <th><h4>👎</h4></th>
          <% if !current_user.nil? && current_user.admin?%>
            <th><h4>🛑</h4></th>
          <% end %>
        </tr>
      </thead>
      <!-- ./Table Headers -->
      <!-- Table Body -->
      <tbody>
      <% @licenceplates.each do |licenceplate| %>
        <tr>
          <td><%= link_to licenceplate.plate.upcase, licenceplate_path(licenceplate) %></td>
          <td><%= licenceplate.province.capitalize %></td>
          <td><%= licenceplate.get_likes.size %></td>
          <td><%= licenceplate.get_downvotes.size %></td>
          <% if !current_user.nil? && current_user.admin?%>
            <td><%= link_to "Delete 🤚", licenceplate, method: :delete,
                                                            data: { confirm: "You sure?" }%>
            </td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
      <!-- ./Table Body -->
    </table>
    <!-- ./Table -->
  </div>
  <!-- ./Row -->

  <!-- Row -->
  <div class="row hide-on-med-and-up">
    <div class="col s6">
      <%= link_to (raw("🚘&nbsp;&nbsp;Rate Someone")), new_licenceplate_path, class: "waves-effect waves-light btn-large green mt-3 px-3", :method => :get %>
    </div>
    <div class="col s6">
      <%= link_to "🏡 Home", welcome_index_path, class: "waves-effect waves-light btn-large blue mt-3", :method => :get %>
    </div>
  </div>
  <!-- ./Row -->

  <!-- Row -->
  <div class="row center-align hide-on-small-only">
    <%= link_to (raw("🚘&nbsp;&nbsp;Rate Someone")), new_licenceplate_path, class: "waves-effect waves-light btn-large green mt-3", :method => :get %>
    <span>&nbsp;&nbsp;</span>
    <%= link_to "🏡 Home", welcome_index_path, class: "waves-effect waves-light btn-large blue mt-3", :method => :get %>
  </div>
  <!-- ./Row -->
