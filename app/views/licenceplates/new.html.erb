  <% content_for :title, "🚗 New" %>
  <h1>New Licence Plate</h1>
  <p>If the plate already exists, you'll be taken there 🤙.</p>
  <!-- Form -->
  <%= form_with model: @licenceplate, local: true do |form| %>
    <!-- Error Messages -->
    <% if @licenceplate.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@licenceplate.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <% @licenceplate.errors.full_messages.each do |msg| %>
          <p style="color:red;"><%= msg %></p>
        <% end %>
      </div>
    <% end %>
    <!-- Error Messages -->

    <label for="licenceplate_plate">Licence Plate</label><br>
    <input type="text" name="licenceplate[plate]" />

    <label>Select Province</label>
    <%= select_tag(:province, options_for_select([
      ['Quebec', "Quebec"],
      ['Ontario', "Ontario"],
      ['Manitoba',"Manitoba"],
      ['Saskatchewan',"Saskatchewan"],
      ['Alberta', "Alberta"],
      ['British Columbia', "British Columbia"],
      ['Nova Scotia', "Nova Scotia"],
      ['Prince Edward Island', "Prince Edward Island"],
      ['New Brunswick', "New Brunswick"],
      ['Newfoundland', "Newfoundland"]
    ]), {:class => 'browser-default'}) %>
    <%= form.submit "Submit 👍", class: "waves-effect waves-light btn-large green mt-3" %>
    <span>&nbsp;&nbsp;</span>
    <%= link_to "Home 🏡", welcome_index_path, class: "waves-effect waves-light btn-large blue mt-3", :method => :get %>
    <% end %>
  <!-- End Form -->
