<% content_for :title, @licenceplate.plate.upcase %>
<!-- Licence Plate -->
<div class="row section mb-3">
  <div class="col s12 m8 offset-m2">
    <div class="center-align z-depth-2"  id="licence_border">

      <div id="drill-hole">&nbsp;&nbsp;</div><!--  the drill holes -->
      <h5 id="plate-province"><%= @licenceplate.province %></h5>
      <div id="drill-hole">&nbsp;&nbsp;</div><!--  the drill holes -->

      <h1><%= @licenceplate.plate.upcase %></h1>

      <div id="drill-hole">&nbsp;&nbsp;</div><!--  the drill holes -->
      <h5 id="plate-province-text">Je me souviens</h5>
      <div id="drill-hole">&nbsp;&nbsp;</div><!--  the drill holes -->
    </div>
  </div>
</div>
<!-- ./ Licence Plate -->

<!-- Votes -->
<div class="row center-align">
  <div class="col s3 m4 right-align">
    <h5 id="votes" class="green-text"><%= @licenceplate.get_upvotes.size%></h5>
  </div>
  <div class="col s3 m2">
    <a class="btn-floating btn-large waves-effect waves-light green" data-method="put" href="/licenceplates/<%= @licenceplate.id %>/upvote">üëç</a>
  </div>
  <div class="col s3 m2">
    <a class="btn-floating btn-large waves-effect waves-light red" data-method="put" href="/licenceplates/<%= @licenceplate.id %>/downvote">üëé</a>
  </div>
  <div class="col s3 m4 left-align">
    <h5 id="votes" class="red-text"><%= @licenceplate.get_downvotes.size%></h5>
  </div>
</div>
<!-- ./ Votes -->

<!-- Nav Links -->
<div class="row center-align mb-3">
  <div class="col s5 offset-s1 m3 offset-m3">
    <%= link_to "üëà  Ranks", licenceplates_path, class: "waves-effect waves-light btn-large orange mt-3", style: "width:100%;", :method => :get %>
