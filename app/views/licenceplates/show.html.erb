<% content_for :title, @licenceplate.plate.upcase %>
<div class="row section">
  <div class="col s12 m8 offset-m2">
    <div class="center-align z-depth-2"  id="licence_border">

      <div>&nbsp;&nbsp;</div>
      <h5 id="plate-province">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @licenceplate.province %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h5>
      <div>&nbsp;&nbsp;</div>

      <h1><%= @licenceplate.plate.upcase %></h1>

      <div>&nbsp;&nbsp;</div>
      <h5 id="plate-province">&nbsp;Je me souviens&nbsp;</h5>
      <div>&nbsp;&nbsp;</div>

    </div>
  </div>
</div>
<div class="row center-align">
  <div class="col s3 m4 right-align">
    <h5 id="votes" class="green-text"><%= @licenceplate.get_upvotes.size%></h5>
  </div>
  <div class="col s3 m2">
    <a class="btn-floating btn-large waves-effect waves-light green" data-method="put" href="/licenceplates/<%= @licenceplate.id %>/upvote">👍</a>
  </div>
  <div class="col s3 m2">
    <a class="btn-floating btn-large waves-effect waves-light red" data-method="put" href="/licenceplates/<%= @licenceplate.id %>/downvote">👎</a>
  </div>
  <div class="col s3 m4 left-align">
    <h5 id="votes" class="red-text"><%= @licenceplate.get_downvotes.size%></h5>
  </div>
</div>
<div class="row center-align">
  <%= link_to "👈  Rankings", licenceplates_path, class: "waves-effect waves-light btn-large orange mt-3", :method => :get %>
  <% if !current_user.nil? && current_user.admin?%>
    <span>&nbsp;&nbsp;</span>
    <%= link_to "✏️ Edit",  edit_licenceplate_path, class: "waves-effect waves-light btn-large green mt-3", :method => :get %>
    <span>&nbsp;&nbsp;</span>
    <%= link_to "🤚 Delete", @licenceplate, method: :delete,
                                  data: { confirm: "You sure?" },
                                  class: "waves-effect waves-light btn-large red mt-3" %>
  <% end  %>
</div>
